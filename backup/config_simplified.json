{
  "app_name": "Amulet AI System",
  "version": "1.0.0",
  "description": "AI system for Thai amulet analysis and comparison",
  
  "api": {
    "host": "127.0.0.1",
    "port": 8001,
    "debug": false,
    "timeout": 60
  },
  
  "frontend": {
    "host": "127.0.0.1",
    "port": 8501,
    "theme": "light"
  },
  
  "model": {
    "path": "training_output_improved/models/best_model.pth",
    "architecture": "efficientnet-b0",
    "input_size": [224, 224],
    "num_classes": 6
  },
  
  "database": {
    "path": "dataset_organized",
    "reference_images": true
  },
  
  "comparison": {
    "model_path": "training_output_improved/models/best_model.pth",
    "database_dir": "dataset_organized",
    "top_k": 5
  },
  
  "image_processing": {
    "max_file_size_mb": 10,
    "thumbnail_size": [300, 300],
    "formats": ["jpg", "jpeg", "png", "webp", "heic"]
  },
  
  "categories": [
    "somdej_fatherguay",
    "somdej_portrait_back",
    "somdej_prok_bodhi",
    "somdej_waek_man",
    "wat_nong_e_duk",
    "wat_nong_e_duk_misc"
  ]
