#!/usr/bin/env python3
"""
üßπ Cleanup Script - ‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡∏ó‡∏µ‡πà‡∏ã‡πâ‡∏≥‡∏ã‡πâ‡∏≠‡∏ô‡πÅ‡∏•‡∏∞‡πÑ‡∏°‡πà‡∏à‡∏≥‡πÄ‡∏õ‡πá‡∏ô
"""

import os
import sys

def main():
    # ‡πÑ‡∏ü‡∏•‡πå‡∏ó‡∏µ‡πà‡∏ï‡πâ‡∏≠‡∏á‡∏•‡∏ö (‡∏ã‡πâ‡∏≥‡∏ã‡πâ‡∏≠‡∏ô‡∏Å‡∏±‡∏ö‡∏™‡∏¥‡πà‡∏á‡∏ó‡∏µ‡πà‡∏≠‡∏¢‡∏π‡πà‡πÉ‡∏ô scripts/ folder)
    files_to_delete = [
        # Launcher scripts (‡∏ã‡πâ‡∏≥‡∏Å‡∏±‡∏ö scripts/main_launcher.py)
        'launch_complete_system.py',
        'launch_system.py', 
        'simple_launcher.py',
        'start.py',
        'system_launcher.py',
        'quick_start.py',
        'setup_complete_system.py',
        'start_amulet_system.py',
        'launch_real_ai_system.py',
        
        # Test scripts (‡∏ã‡πâ‡∏≥‡∏Å‡∏±‡∏ö scripts/test_system.py)
        'test_api_connection.py',
        'test_api_import.py', 
        'test_real_ai_system.py',
        'test_simple.py',
        'test_system.py',
        'quick_test.py',
        'final_test.py',
        
        # Fix/Emergency scripts (‡πÑ‡∏°‡πà‡πÉ‡∏ä‡πâ‡πÅ‡∏•‡πâ‡∏ß)
        'emergency_fix.py',
        'fix_and_run_system.py',
        'run_streamlit_fast.py',
        
        # Batch files (‡∏ã‡πâ‡∏≥‡∏Å‡∏±‡∏ö scripts/start_system.bat)  
        'launch.bat',
        'fix_streamlit.bat',
        'launch_real_ai_backend.bat',
        'launch_real_ai_complete.bat', 
        'run_streamlit_fast.bat',
        'start_amulet_system.bat',
        'start_system.bat',
        
        # Duplicate files
        'README_NEW.md',
        'requirements_fixed.txt'
    ]
    
    print("üßπ ‡∏Å‡∏≥‡∏•‡∏±‡∏á‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡∏ó‡∏µ‡πà‡∏ã‡πâ‡∏≥‡∏ã‡πâ‡∏≠‡∏ô...")
    deleted_count = 0
    
    for file in files_to_delete:
        if os.path.exists(file):
            try:
                os.remove(file)
                print(f"‚úÖ ‡∏•‡∏ö: {file}")
                deleted_count += 1
            except Exception as e:
                print(f"‚ùå ‡πÑ‡∏°‡πà‡∏™‡∏≤‡∏°‡∏≤‡∏£‡∏ñ‡∏•‡∏ö {file}: {e}")
        else:
            print(f"‚ö†Ô∏è  ‡πÑ‡∏°‡πà‡∏û‡∏ö‡πÑ‡∏ü‡∏•‡πå: {file}")
    
    print(f"\nüéâ ‡∏•‡∏ö‡πÑ‡∏ü‡∏•‡πå‡πÅ‡∏•‡πâ‡∏ß {deleted_count} ‡πÑ‡∏ü‡∏•‡πå")
    print("üìÅ ‡πÑ‡∏ü‡∏•‡πå‡∏´‡∏•‡∏±‡∏Å‡∏ó‡∏µ‡πà‡πÄ‡∏´‡∏•‡∏∑‡∏≠:")
    print("   - scripts/main_launcher.py (‡πÄ‡∏£‡∏¥‡πà‡∏°‡∏£‡∏∞‡∏ö‡∏ö)")
    print("   - scripts/test_system.py (‡∏ó‡∏î‡∏™‡∏≠‡∏ö)") 
    print("   - scripts/start_system.bat (Windows)")

if __name__ == "__main__":
    main()
