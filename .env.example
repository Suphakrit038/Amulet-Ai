# Amulet-AI Environment Configuration
# Copy this file to .env and adjust values for your environment

# API Configuration
AMULET_API_HOST=localhost
AMULET_API_PORT=8000
AMULET_API_PROTOCOL=http

# Security Configuration (CHANGE IN PRODUCTION!)
AMULET_SECRET_KEY=your-very-secure-secret-key-here
AMULET_ALLOWED_ORIGINS=http://localhost:8501,http://localhost:8511,http://localhost:8510
AMULET_TOKEN_ALGORITHM=HS256
AMULET_TOKEN_EXPIRE_MINUTES=30

# File Upload Configuration
AMULET_MAX_FILE_SIZE=10485760
AMULET_UPLOAD_TIMEOUT=60

# Rate Limiting
AMULET_MAX_REQUESTS_PER_MINUTE=100
AMULET_RATE_LIMIT_ENABLED=true

# Model Paths
AMULET_MODEL_PATHS=trained_model,trained_model_enhanced,trained_model_production
AMULET_TWOBRANCH_PATHS=trained_twobranch,trained_model_twobranch

# Logging
AMULET_LOG_LEVEL=INFO
AMULET_LOG_FILE=logs/amulet-ai.log

# Performance
AMULET_ENABLE_ASYNC_PROCESSING=true
AMULET_MAX_CONCURRENT_REQUESTS=10
AMULET_CACHE_TTL_SECONDS=300

# Cache Configuration
AMULET_CACHE_MAX_SIZE=104857600
AMULET_CACHE_DEFAULT_TTL=3600
AMULET_IMAGE_CACHE_SIZE=500
AMULET_IMAGE_CACHE_TTL=1800

# Memory Management
AMULET_MEMORY_WARNING_THRESHOLD=0.8
AMULET_MEMORY_CRITICAL_THRESHOLD=0.9
AMULET_MMAP_THRESHOLD=52428800
AMULET_LARGE_IMAGE_THRESHOLD=10485760

# Performance Settings
AMULET_CONNECTION_POOL_SIZE=100
AMULET_CHUNK_SIZE=8192
AMULET_THREAD_POOL_SIZE=4

# Frontend
AMULET_FRONTEND_CACHE_IMAGES=true
AMULET_FRONTEND_CSS_CACHE=true

# Development (set to false in production)
AMULET_DEBUG=false
AMULET_RELOAD=false